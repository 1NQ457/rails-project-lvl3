<!DOCTYPE html>
<html>
  <head>
    <title>RailsProjectLvl3</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column h-100">
  <div class="container mb-2">
    <div class="d-flex flex-wrap align-items-center py-2 border-bottom">
      <div class="navbar navbar-expand-md navbar-light me-auto">
        <a class="navbar-brand me-md-4" href="/">Bulletin Board</a>
        <div class="collapse navbar-collapse" id="navbarToggler">
          <ul class="nav nav-pills flex-grow-1 navbar-nav me-auto">
            <li class="nav-item me-2">
              <a class="nav-link text-dark" href="/">Home</a>
            </li>
          </ul>
        </div>
      </div>
      <ul class="nav nav-pills">
        <li class="nav-item me-2">
          <a class="nav-link text-dark" href="<%= new_user_session_path %>">Login</a>
        </li>
        <li class="nav-item me-2">
          <a class="nav-link text-dark" href="<%= new_user_registration_path %>">Signup</a>
        </li>
      </ul>
    </div>
  </div>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
